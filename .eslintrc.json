{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",  // for "ESLint" plugin 
        "plugin:@typescript-eslint/recommended",  // for "ESLint" plugin (typescript lint)
        "prettier"    // for "Prettier - Code formatter" plugin  
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType":"module"
    },
    "plugins": [
        "@typescript-eslint"
    ]
}